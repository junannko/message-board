<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <% @messages.each do |message| %>
            <span class="label label-info"><%= message.name %></span>
            <%=  message.body%>
            <br />
        <% end %>
    </div>
</div>




<%= form_for(Message.new) do |f| %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <span class="glyphicon glyphicon-pencil"></span>名前
            <%= f.text_field :name , class: "form-control" , placeholder: "name input" %>
        </div>
        <div class="col-md-12">
            <span class="glyphicon glyphicon-list-alt"></span>内容
            <%= f.text_area :body , class: "form-control" , rows: "3" ,  placeholder: "text input" %>
        </div>
        <div class="col-md-12">
            <%= f.submit class: "btn btn-primary" %>
        </div>
    </div>
</div>
<% end %>



<style>
    .col-md-12{
        margin-bottom: 2rem;
    }
    
    .col-md-12 span{
        margin-right: 0.5rem;
        margin-bottom: 1rem;
        color: #999;
    }
    
    .panel-body{
        line-height: 200%;
    }
</style>
